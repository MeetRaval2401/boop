#include <iostream> 

using namespace std; 

// base class 

class mother

{ 

public: 

    void display() 

    { 

        cout << “mother class” << endl; 

    } 

}; 

// sub class which inherits from class A 

class daughter_1 : public mother

{ 

public: 

    void display() 

    { 

        cout << “daughter_1” << endl; 

    } 

}; 

// sub class which inherits from class B 

class daughter_2 : public mother 

{ 

public: 

    void display() 

    { 

        cout << “daughter_2” << endl; 

    } 

}; 

int main() 

{ 

    daughter_2 obj; 

    obj.display(); 

    return 0; 

}
