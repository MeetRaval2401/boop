#include<iostream>
using namespace std;

class Test {
public:
    float r, area;

    Test() {
        cout << "Enter radius of a circle:";
        cin >> r;

        area = 3.14 * r * r;
    }

    void display() {
        cout << "Area of circle is: " << area;
    }
};

int main() {

    Test obj;

    obj.display();

    return 0;
}
C++
Output:
